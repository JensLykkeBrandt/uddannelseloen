{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "command": "grunt",
    "isShellCommand": true,
    "showOutput": "silent",
    "tasks": [{
        "taskName": "dev"
    },{
        "taskName": "dev-nowatch",
        "isBuildCommand": true, 
        "isWatching": false,
        "problemMatcher": [
            "$lessCompile",
            "$tsc",
            "$jshint"
        ]
    },{
        "taskName": "stage"
    },{
        "taskName": "prod"
    }]
}